#include <stdio.h>
#include <stdlib.h>


struct no {
int numero;
struct no *proximo;
};

/////////////////
//Declaração de variaveis

struct no *cabeca;

///////////////////////////////////
///func que oinsere umn no na lista/////

void inserir(int numero){

///alocacao de memoria
struct no *novoNo = (struct no *) malloc ( sizeof (struct no));
novoNo-> numero = numero ;
novoNo-> proximo = cabeca;


if (cabeca == NULL ){
    cabeca = novoNo;
    novoNo -> proximo = cabeca;

} else {
 struct no *ponteiro = cabeca;

 while (ponteiro -> proximo != cabeca){
    ponteiro = ponteiro -> proximo;
 }
        ponteiro -> proximo = novoNo;
    }

}

 void imprimir () {
    struct no *ponteiro = cabeca;
    if (ponteiro != NULL){
    while (1){
        printf("%d\n",ponteiro -> numero);
        ponteiro = ponteiro -> proximo;

            if (ponteiro == cabeca){
                break;
            }
        }
    }
     printf("============================\n");
 }

/////func principal de execucao////

int main(){

;
imprimir ();

inserir (1);

imprimir ();

inserir (1);
inserir (2);
inserir (3);
inserir (4);
inserir (5);

imprimir();
}
